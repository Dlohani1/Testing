package pkg;
import java.util.*;
import java.io.FileWriter;
import java.io.IOException;
import java.util.Scanner;
import org.json.JSONException;
import org.json.JSONObject;
public class jeevan {

	public static void main(String[] args) throws JSONException, IOException
	{
		
		Scanner scan=new Scanner(System.in);
		int arr[] = new int[6];
		
        System.out.println("Enter 6 elements to insert into array:");
        for(int i = 0 ; i<6 ; i++)
        {
             arr[i] = scan.nextInt();
        }
        
       while(true) 
       {
       System.out.println("Enter Your Choice");
       System.out.println("1. Perform subtraction");
       System.out.println("2. Perform multiplication"); 
       System.out.println("3. Pick random number");	 
       System.out.println("4. Print in increasing order");
       System.out.println("5. Print in decreasing order");	 
       System.out.println("Other Numbers to exit");
       
       int option = scan.nextInt();
       switch(option)
       {
           case 1 : System.out.println("Enter number to substract");
           			int sb=scan.nextInt();
           			
           			for(int i=0;i<6;i++)
           			{
           				System.out.print(sb-arr[i]+", ");
           			}
           			System.out.println();
           			break;
           			
           case 2 :	JSONObject sampleObject = new JSONObject();
        	   		for(int i=0;i<6;i++)
        	   		{
        	   			sampleObject.put("Inputnumber"+i,arr[i]);
        	   		}
        	   		int  mul=1;
        	   		for(int i=0;i<6;i++)
        	   		{
        	   			mul=mul*arr[i];
        	   		}
        	   		sampleObject.put("Multiplication",mul);
        	   		
        	   		try
        	   		{
        	   			FileWriter file=new FileWriter("//C://Users//Alex//Desktop//file3.json");
        	   			file.write(sampleObject.toString());
        	   			file.flush();
        	   			file.close();
        	   		}
        	   		
        	   		catch(IOException e)
        	   		{
        	   			e.printStackTrace();
        	   		}
        	   		
        	   		System.out.println(sampleObject);
            		break;
            		
           case 3 :Random r1=new Random(); 
        	   int ram=r1.nextInt(6);
        	   System.out.println(ram);
           			
           		
           			break;
        	   		
           case 4 : System.out.println(" lowest to highest  order");
           			for (int i=0; i<arr.length; i++)   
           			{  
           				for (int j=i+1; j<arr.length; j++)   
           				{  
           				 
           					if (arr[i]>arr[j])   
           					{  
           					 int tmp=arr[i];  
           						arr[i]=arr[j];  
           						arr[j]=tmp;  
           					}  
           				}  
           				System.out.print(arr[i]+" ");  
           			}
           			break;
        	   
           case 5 : System.out.println(" highest to lowest order");
           			
           for (int i=0; i<arr.length; i++)   
  			{  
  				for (int j=i+1; j<arr.length; j++)   
  				{  
  				 
  					if (arr[i]<arr[j])   
  					{  
  					 int tmp=arr[i];  
  						arr[i]=arr[j];  
  						arr[j]=tmp;  
  					}  
  				}  
  				System.out.print(arr[i]+" ");  
  			}
  			break;
           
           default : System.exit(0);
           			break;
           
        }
       }
        
        
		
		
	}

}



